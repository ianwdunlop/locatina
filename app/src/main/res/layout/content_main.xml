<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText android:id="@+id/editPhoneNumber" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:inputType="phone" android:gravity="top"/>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:text="@string/schedule_job" android:id="@+id/buttonScheduleJob"/>

</LinearLayout>